@model BookStore.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Đăng nhập | Nhà sách AC";
    Layout = "~/Views/Shared/_Empty.cshtml";
}

<div class="modal fade active in" id="modal_cusomter" style="display: block;" aria-hidden="false">
    <div class="modal-dialog" role="dialog"
         style="width:400px;height:400px;margin-top:100px"
         >
        <div class="modal-content">

            <div class="panel panel-default" style="margin-bottom:0">
                <div class="panel-heading" style="background-color:rgb(1, 180, 85); color:aliceblue">
                    <i class="fa fa-tasks fa-fw"></i> Đăng nhập | Nhà sách AC
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <section id="loginForm" style="margin-top:40px;margin-right:20px;margin-left:20px">
                        @using (Html.BeginForm("Login", "Staff", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @data_width = "100%" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @data_width = "100%" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" style="text-align:center;margin-top:30px">
                                <input type="submit" value="Đăng nhập"
                                       class="btn btn-default" />
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
