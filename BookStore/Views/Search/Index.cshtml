@using System.Globalization;
@{
    ViewBag.Title = "Tìm kiếm sản phẩm | Nhà sách AC";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    CultureInfo ci = new CultureInfo("vi-VN");
}

