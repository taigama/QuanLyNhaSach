@using System.Globalization;
@{
    ViewBag.Title = "Liên hệ với Nhà sách AC";
    Layout = "~/Views/MyShared/MainLayout.cshtml";
}

<style>
    #map {
        height: 400px;
        width: 100%;
        outline: 2.5px rgba(0, 0, 0, 0.5) solid;
        margin: 20px auto;
    }
    .myTitle {
        margin: 15px 0 15px 0;
        font-size: 25px;
        color: #808080;
        font-weight: bold;
        text-transform: uppercase;
        font-family: 'Merriweather Sans', sans-serif;
        /*text-shadow: 1px 1px #000;*/
    }
    p {
        color: black !important;
    }
    .bg-black {
        background-color: black;
    }
</style>
<link href="~/Assets/css/main.css" rel="stylesheet" />

<div style="margin-top: 50px"></div>

<div id="contact-page" class="container">
    <div class="bg ">
        <div class="row" style="margin-top:30px">
            <div class="col-lg-10 col-lg-offset-1">
                <h2 class="myTitle text-center">Địa chỉ</h2>
                <div id="map"></div>
            </div>
        </div>
        <div class="row" style="margin-top: 30px;">
            <div class="col-lg-6 col-lg-offset-1">
                <div class="col-lg-12">
                    <h2 class="myTitle text-center">Liên lạc</h2>
                    <div class="status alert alert-success" style="display: none"></div>
                    <form id="main-contact-form" class="row" name="contact-form" method="post">
                        <div class="form-group col-md-6">
                            <input type="text" name="name" class="form-control" required="required" placeholder="Tên">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="email" name="email" class="form-control" required="required" placeholder="Email">
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" name="subject" class="form-control" required="required" placeholder="Tiêu đề">
                        </div>
                        <div class="form-group col-md-12">
                            <textarea name="message" id="message" required="required" class="form-control" rows="8" placeholder="Bạn muốn nhắn nhủ gì với chúng tôi"></textarea>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-my col-lg-12" style="font-weight:bolder;margin-top:0px" value="GỬI" onclick="alert('Xin cảm ơn bạn đã liên hệ với chúng tôi. Chúng tôi sẽ có phản hồi sớm nhất qua hộp thư điện tử.')">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <h2 class="myTitle text-center">
                    Liên kết
                </h2>
                <address>
                    <p style="text-align:center">
                        <a target="_blank" href="//se.uit.edu.vn/">
                            <img style="background-color:#14223c;object-fit:contain;width:50%;height:50%" src="//se.uit.edu.vn/templates/mimety/images/logo.png" />
                        </a>
                        <br /><br /><br />Đồ án Quản lý nhà sách
                        <br />Nhóm 5
                        <br />Nền tảng: ASP.NET MVC5
                    </p>
                </address>
            </div>
        </div>
    </div>
</div><!--/#contact-page-->
<div style="margin-top: 100px"></div>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript" src="~/Assets/js/gmaps.js"></script>

<script type="text/javascript">
    // Google Maps
    function initMap() {
        var uluru = { lat: 10.870228, lng: 106.803718 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 14,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }

    // navigate sang trang tìm kiếm
    function onSearch() {
        if ($("#search_box").val())
            window.location = '/Search/Index?key=' + $("#search_box").val();
        else
            alert('Bạn vui lòng nhập từ khoá để tìm kiếm');
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key= AIzaSyBVyX5GffJrS5HjrMSI08vK9cR6-ZaI5mk&callback=initMap">
</script>






